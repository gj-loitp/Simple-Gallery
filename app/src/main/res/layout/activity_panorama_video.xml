<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/md_grey_black">

    <com.google.vr.sdk.widgets.video.VrVideoView
        android:id="@+id/vrVideoView"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <include layout="@layout/view_bottom_video_time_holder" />

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/ivExplore"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentBottom="true"
        android:padding="@dimen/activity_margin"
        android:src="@drawable/ic_explore_vector" />

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/ivCardboard"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:padding="@dimen/activity_margin"
        android:src="@drawable/ic_cardboard" />

</RelativeLayout>
